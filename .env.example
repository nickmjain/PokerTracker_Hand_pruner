# PokerTracker 4 Database Configuration
# Copy this file to .env and fill in your actual values

# Database connection settings
DB_HOST=localhost
DB_NAME=pt4db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database directory (PostgreSQL data directory)
DB_DATA_DIR=E:\PostGres\16\data\base\26186\

# Default inactivity threshold (days)
DEFAULT_DAYS=365

# Optional: Enable verbose output by default
VERBOSE=false

# Optional: Enable dry run by default (set to true for testing)
DRY_RUN=false

# Test mode settings (for faster testing on large databases)
TEST_MODE=false
TEST_LIMIT=100000

# Performance optimization settings
# Parallel processing with multiprocessing
ENABLE_PARALLEL=false
PARALLEL_CHUNKS=4
MAX_WORKERS=4

# PostgreSQL parallel query execution settings
PG_PARALLEL=false
PG_MAX_WORKERS=4
PG_WORK_MEM=256MB
PG_MAINTENANCE_MEM=1GB

# Two-phase processing with temp tables
USE_TWO_PHASE=false
